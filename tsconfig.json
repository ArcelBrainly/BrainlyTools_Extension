{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types",
      "./src/scripts/typings",
    ],
    "baseUrl": ".",
    "paths": {
      "@style-guide": ["src/scripts/components/style-guide"],
      "@/*": ["src/*"],
    }
  },
  "exclude": [
    "build",
    "node_modules",
    "**/node_modules/*"
  ]
}
